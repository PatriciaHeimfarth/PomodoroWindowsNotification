<Window x:Class="Pomodoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
 
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            
        </Grid.RowDefinitions>

        <TextBox Background="Black" Foreground="LightPink" Grid.Column="0" Name="Counter" FontSize="50"></TextBox>
        <Button Name="Start" Background="LightBlue" Grid.Column="0" Grid.Row="1">Start Countdown</Button>
        <Button Name="Stop" Background="LightPink" Grid.Column="1" Grid.Row="1">Stop Countdown</Button>
        
    </Grid>
</Window>
